{
  "$schema": "https://deno.land/x/denon/schema.json",
  "allow": [
    "run",
    "env",
    "net",
    "write",
    "read",
    "plugin"
  ],
  "scripts": {
    "startDev": {
      "cmd": "deno run ./backend/src/app.ts",
      "desc": "Start Chopper Server (development)",
      "env": {
        "ENVIRONMENT": "development",
        "PORT": "8080",
        "DB_NAME": "chopper_db",
        "DB_HOST_URL": "mongodb+srv://chopper-dev:password@cluster0.pyqbx.mongodb.net"
      },
      "log": "info",
      "watch": true,
      "unstable": true
    },
    "startProd": {
      "cmd": "deno run ./backend/src/app.ts",
      "desc": "Run Chopper Backend (production)",
      "env": {
        "ENVIRONMENT": "production",
        "_comment": "Some environment variable are provided by the runtime environment"
      },
      "watch": false,
      "unstable": true
    },
    "watcher": {
      "interval": 350,
      "exts": ["ts", "json"],
      "match": ["./*.*"],
      "skip": ["*/.git/*"],
      "legacy": false
    }
  }
}