{
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "migrate": {
      "allow": [
        "env",
        "net",
        "read"
      ],
      "cmd": "deno run https://raw.githubusercontent.com/halvardssm/deno-nessie/master/cli.ts migrate -d -c ./config/nessie.config.ts",
      "watch": false
    },
    "rollback": {
      "allow": [
        "env",
        "net",
        "read"
      ],
      "cmd": "deno run https://deno.land/x/nessie@v1.1.2/cli.ts -d -c ./config/nessie.config.ts rollback",
      "desc": "rollback [amount|all] - rollback your migrations by the amount amount defined of how many migrations, defaults to 1 if not set.",
      "watch": false
    },
    "seed": {
      "allow": [
        "env",
        "net",
        "read"
      ],
      "cmd": "deno run https://raw.githubusercontent.com/halvardssm/deno-nessie/master/cli.ts seed -d -c ./config/nessie.config.ts",
      "watch": false
    },
    "lint": {
      "cmd": "deno lint ./src",
      "watch": false,
      "unstable": true
    },
    "format": {
      "cmd": "deno fmt --check",
      "watch": false
    },
    "startDev": {
      "allow": [
        "run",
        "env",
        "net",
        "write",
        "read"
      ],
      "cmd": "deno run ./src/app.ts",
      "desc": "Start Choppa Server (development)",
      "env": {
        "ENVIRONMENT": "development"
      },
      "lock": "./deps.lock.json",
      "log": "info",
      "tsconfig": "./tsconfig.json",
      "watch": true
    },
    "startProd": {
      "allow": [
        "run",
        "env",
        "net",
        "write",
        "read"
      ],
      "cmd": "deno run ./src/app.ts",
      "desc": "Run Choppa Backend (production)",
      "env": {
        "_comment": "Environment variables are set by the production environment"
      },
      "lock": "./deps.lock.json",
      "tsconfig": "./tsconfig.json",
      "watch": false
    },
    "test": {
      "cmd": "deno test --allow-all tests/acceptance",
      "tsconfig": "./tsconfig.json",
      "desc": "Run Choppa backend acceptance tests",
      "watch": false
    }
  },
  "watcher": {
    "interval": 350,
    "exts": [
      "ts",
      "json"
    ],
    "match": [
      "./*.*"
    ],
    "skip": [
      "*/.git/*"
    ]
  }
}