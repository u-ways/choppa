{
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "checkFormat": {
      "cmd": "deno fmt --check",
      "desc": "check code format against Deno's code formatting standard"
    },
    "format": {
      "cmd": "deno fmt",
      "desc": "format code using Deno's code formatting standard"
    },
    "lint": {
      "cmd": "deno lint ./src",
      "desc": "lint source (`./src`) using Deno's linting standard",
      "unstable": true
    },
    "migrate": {
      "allow": [
        "env",
        "net",
        "read"
      ],
      "cmd": "deno run https://deno.land/x/nessie@v1.1.2/cli.ts -d -c ./config/nessie.config.ts migrate",
      "desc": "migrate [amount?|all] - migrate your migrations in your migration folder (sorted by timestamp), defaults to all if not set"
    },
    "rollback": {
      "allow": [
        "env",
        "net",
        "read"
      ],
      "cmd": "deno run https://deno.land/x/nessie@v1.1.2/cli.ts -d -c ./config/nessie.config.ts rollback",
      "desc": "rollback [amount|all] - rollback your migrations by the amount amount defined of how many migrations, defaults to 1 if not set."
    },
    "seed": {
      "allow": [
        "env",
        "net",
        "read"
      ],
      "cmd": "deno run https://deno.land/x/nessie@v1.1.2/cli.ts -d -c ./config/nessie.config.ts seed",
      "desc": "seed [matcher?]: Seed - will seed your database. Optional matcher will match all files in your seed folder by string literal or RegExp"
    },
    "startDev": {
      "allow": [
        "run",
        "env",
        "net",
        "write",
        "read"
      ],
      "cmd": "deno run ./src/app.ts",
      "desc": "start Choppa server (development)",
      "env": {
        "ENVIRONMENT": "development"
      },
      "lock": "./deps.lock.json",
      "log": "info",
      "tsconfig": "./tsconfig.json",
      "watch": true
    },
    "startProd": {
      "allow": [
        "run",
        "env",
        "net",
        "write",
        "read"
      ],
      "cmd": "deno run ./src/app.ts",
      "desc": "run Choppa server (production)",
      "env": {
        "_comment": "Environment variables are set by the production environment"
      },
      "lock": "./deps.lock.json",
      "tsconfig": "./tsconfig.json"
    },
    "test": {
      "cmd": "deno test --allow-all tests/acceptance",
      "tsconfig": "./tsconfig.json",
      "desc": "run Choppa acceptance tests"
    }
  },
  "watch": false,
  "watcher": {
    "interval": 350,
    "exts": [
      "ts",
      "json"
    ],
    "match": [
      "./*.*"
    ],
    "skip": [
      "*/.git/*"
    ]
  }
}